[{
  // sourced from header module //
  "name": "bar1",
  "layer": "top",
  "position": "top",
  "mod": "dock",
  "height": 30,
  "include": [
      "~/.config/waybar/modules.jsonc"
  ],

  "modules-left": [
    "hyprland/window",
  ],
  "modules-center": [
    "hyprland/workspaces"
  ],

  "modules-right": [
    "tray",
    "custom/weather",
    "network",
    "group/clockdrawer",
    "group/applaunchdrawer",
  ],

  "group/clockdrawer": {
    "orientation": "inherit",
    "drawer": {
    "transition-duration": 300,
    "children-class": "clock-drawer-child",
    "transition-left-to-right": false,
    "click-to-reveal": true,
  
  },
  "modules": [
    "clock",
    "pulseaudio",
    "backlight",
    "battery"
  ]
  },

  "group/networkgroup": {
    "orientation": "inherit",
    "modules": [
    "tray",
    "network"
  ]
  },


  "group/applaunchdrawer": {
    "orientation": "inherit",
    "drawer": {
    "transition-duration": 300,
    "children-class": "power-drawer-child",
    "transition-left-to-right": false
  
  },
  "modules": [
    "custom/applauncher",
    "custom/wallpaper"
  ]
  }
}
